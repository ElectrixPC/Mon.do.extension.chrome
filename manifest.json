{
  "manifest_version": 2,

  "name": "Mon.do",
  "description": "Your Mondo balance in your browser",
  "version": "0.0.1",

  "permissions": [
    "storage"
  ],

  "browser_action": {
    "default_icon": "Icon.png",
    "default_popup": "popover.html"
  },

  "background": {
    "scripts": [
      "mondo.js"
    ]
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": {
    "16" : "Icon.png",
    "48" : "Icon.png",
    "128" : "Icon.png"
  }
}
